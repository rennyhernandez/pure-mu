.message 
  height: auto
  width: 550px
  word-break: break-all
  
.bubble 
  position: relative
  padding: 5px 5px 5px 5px
  margin: 15px
  background: #FFFFFF
  -webkit-border-radius: 0px
  -moz-border-radius: 0px
  border-radius: 0px
  border: #7F7F7F solid 1px


.bubble:after 
  content: ''
  position: absolute
  border-style: solid
  border-width: 15px 15px 15px 0
  border-color: transparent #FFFFFF
  display: block
  width: 0
  z-index: 1
  left: -15px
  top: 45px


.bubble:before 
  content: ''
  position: absolute
  border-style: solid
  border-width: 15px 15px 15px 0
  border-color: transparent #7F7F7F
  display: block
  width: 0
  z-index: 0
  left: -16px
  top: 45px


  

